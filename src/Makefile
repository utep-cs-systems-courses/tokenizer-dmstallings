# for convenience, define variable $(OBJS) to list of object files
OBJS= tokenizer.o history.o uimain.o

# compiler flags.  -g for debug, -O3 for optimization
CFLAGS=-g -O3

# first target is built by default
all: tokenizer

# include file dependencies
tokenizer.o: tokenizer.h tokenizer.c uimain.c
history.o: history.h history.c uimain.c

# $@=target, $^=prerequisitesxs
tokenizer: tokenizer.o history.o uimain.o
	cc -o $@ $^ $(CFLAGS)

# deletes files generated by compilation
clean:
	rm -f *.o tokenizer
# executes the tokenizer target that was built previously
run: tokenizer
	./tokenizer
